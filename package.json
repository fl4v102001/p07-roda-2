{
  "name": "roda-da-sorte-monorepo",
  "version": "1.0.0",
  "private": true,
"scripts": {
  "dev:backend": "tsx watch backend/src/server.ts",
  "dev:frontend": "vite",
  "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
  
  "build:frontend": "vite build",
  "build:backend": "tsc -p backend/tsconfig.json",
  "build": "npm run build:frontend && npm run build:backend",

  "start": "node backend/dist/server.js"
},

  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "preact": "^10.22.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "ws": "^8.17.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.9.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.0"
  }}
